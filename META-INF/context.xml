<Context path="/LilleWebMarket" docBase="LilleWebMarket" debug="99">


    <!-- Pool de connexion -->
    <Resource
        name="database"
        auth="Container"
        type="javax.sql.DataSource"
        maxActive="8"
        maxIdle="4"
        maxWait="10000"
        username="demodea"
        password="moi"
        driverClassName="org.postgresql.Driver"
        url="jdbc:postgresql://localhost:5432/demodea"
    />


    <!-- Realm des utilisateurs -->
    <Realm
        className="org.apache.catalina.realm.DataSourceRealm"
        debug="99"
        dataSourceName="database"
        localDataSource="false"
        userTable="lwm_utilisateur"
        userNameCol="login"
        userCredCol="mdp"
        userRoleTable="lwm_utilisateur_infos"
        roleNameCol="role"
    />


</Context>